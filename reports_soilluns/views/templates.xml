<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>

        <template id="external_soilluns_layout_standard">
            <t t-name="external_soilluns_layout_standard">
                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <div class="row">
                    </div>
                    <div t-if="company.logo or company.report_header" class="row zero_min_height">
                        <div class="col-12">
                            <div style="border-bottom: 0px solid black;"/>
                        </div>
                    </div>

                </div>

                <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <div>
                        <!-- This div ensures that the address is not cropped by the header. -->
                        <t t-call="web.address_layout"/>
                    </div>
                    <t t-raw="0"/>
                </div>

                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <t t-if="o">
                        <t t-if="o._name == 'sale.order'">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                        </t>
                    </t>
                    <div class="text-center" style="border-top: 0px solid black;margin-top: 10px">
                        <div style="width:100%;">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <p align="center" style="font-size:11px;font: montserrat">Registro Mercantil de Murcia. Tomo 2800 Folio 73. Inscripción 1ª.Hoja-Mu75396. CIF B73704405</p>
                        </div>
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <template id="external_soilluns_layout">
            <t t-name="external_soilluns_layout">
                <t t-if="not o" t-set="o" t-value="doc"/>

                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id"/>
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                </t>

                <t t-call="reports_konery.external_soilluns_layout_standard"><t t-raw="0"/></t>

            </t>
        </template>


        <template id="soilluns_invoice_report_document_report">
            <t t-name="soilluns_invoice_report_document_report">
                <t t-call="reports_soilluns.external_soilluns_layout">
                    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,300" rel="stylesheet"/>
                    <div>
                        <div style="float:left">
                            <div style="text-align:left;white-space: nowrap;font-size:14px;line-height: 18px;font-family: montserrat;">
                                <strong>
                                    <span t-field="o.company_id" style="text-align:left;color:#E62450;font-weight: 900;white-space: nowrap;font-size:16px;line-height: 18px;"/>
                                </strong>
                                <br/>
                                <span t-field="o.company_id.street"/>
                                <br/>
                                <span t-field="o.company_id.street2"/>
                                <br/>
                                <span t-field="o.company_id.zip"/>
                                <span t-field="o.company_id.state_id"/>,
                                <span t-field="o.sequence_prefix"/>
                                <br/>
                                CIF:

                                <br/>

                                <br/>
                            </div>
                        </div>
                        <div style="float:right;text-align:right">
                            <div>
                                <strong>
                                    <h3 style="font-family: montserrat;font-size:16px;color:#E62450;text-align:right;font-weight: 900;">
                                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                            <!--<span style="font-weight: 600" t-if="o.state not in ['draft','sent']">FACTURA: </span>-->
                                            <span style="font-weight: 600">FACTURA: </span>
                                            <span t-if="o.move_type == 'out_refund'">RECTIFICATIVA</span>
                                        </t>
                                        <t style="font-weight: 600" t-if="env.context.get('proforma', False) or is_pro_forma">
                                            <span>Pro-Forma Invoice # </span>
                                        </t>
                                    </h3>
                                </strong>
                                <p style="font-size:14px;font-family: montserrat;line-height: 18px;"> FACTURA Nº #:
                                    <strong>
                                        <span t-field="o.name"/>
                                    </strong>
                                    <br/>
                                    FECHA:
                                    <strong>
                                        <span t-field="o.invoice_date"/>
                                    </strong>
                                    <br/>
                                    <!--<p t-if="o.state in ['draft','sent']" style="font-size:14px;font-family: montserrat;line-height: 18px;" > PRESUPUESTO #: <strong><span t-field="o.name"/></strong><br/>
                                                FECHA: <strong><span  t-field="o.x_fecha_presupuesto"/></strong></p>-->
                                    VENCIMIENTO:
                                    <strong>
                                        <span t-field="o.invoice_payment_term_id"/>
                                    </strong>
                                    <br/>
                                    Modo de pago:
                                    <strong>
                                        <span t-field="o.payment_mode_id"/>
                                    </strong>
                                    <br/>
                                </p>
                            </div>
                            <div style="font-weight: 400;font-family: montserrat;font-size:14px;text-align:right;line-height: 18px;">
                                <strong>
                                    <span t-field="o.partner_id" style="text-align:left;color:#E62450;font-weight: 900;white-space: nowrap;font-size:16px;"/>
                                </strong>
                                <br/>
                                <span t-field="o.partner_id.street"/>
                                <br/>
                                <span t-field="o.partner_id.zip"/>
                                <span t-field="o.partner_id.state_id"/>,

                                <span t-field="o.partner_id.country_id"/>
                                <br/>
                                CIF:
                                <span t-field="o.partner_id.vat"/>
                                <br/>
                            </div>
                        </div>
                    </div>
                    <!--<t t-set="o" t-value="o.with_context(lang=lang)"/><div style="flex;font-weight: 400;font-family: Campton;"><div style="float:left;white-space: nowrap;line-height: 18px;font-size:16px;"><br/><br/><strong><h3><span style="font-weight: 600;" t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">FACTURA:</span><span style="font-weight: 600;" t-if="o.type == 'out_invoice' and o.state == 'draft'">FACTURA PROFORMA:</span><span style="font-weight: 600;" t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span><span style="font-weight: 600;" t-if="o.type == 'out_refund'">Credit Note</span><span style="font-weight: 600;" t-if="o.type == 'in_refund'">Vendor Credit Note</span><span style="font-weight: 600;" t-if="o.type == 'in_invoice'">Vendor Bill</span><span style="font-weight: 600;" t-field="o.number"/></h3></strong><br/><strong><span t-field="o.partner_id"/></strong><br/><span t-field="o.partner_id.street"/><br/><span t-field="o.partner_id.zip"/><span t-field="o.partner_id.state_id"/><br/><span t-field="o.partner_id.country_id"/><br/>
                                        NIF:<span t-field="o.partner_id.vat"/><br/></div><div style="float:right;"><div style="text-align:left;color:#E62450;white-space: nowrap;font-size:19px;line-height: 18px;"><strong><span t-field="o.company_id"/></strong><br/><span t-field="o.company_id.street"/><br/><span t-field="o.company_id.street2"/><br/><span t-field="o.company_id.zip"/><span t-field="o.company_id.state_id"/><br/><span t-field="o.company_id.country_id"/><br/></div><div><br/>
                                            NIF:<span t-field="o.company_id.vat"/><br/></div><div><br/><p style="text-align:left;color:#E62450;line-height: 18px;font-size:18px;">
                                            www.konery.com<br/>
                                            info@konery.com<br/>
                                            +34 868 07 44 04 <br/></p><br/></div><div style="line-height: 18px;"><p style="font-size:16px;"> NÚMERO FACTURA:<strong><span t-field="o.number"/></strong><br/>
                                            FECHA FACTURA:<strong><span t-field="o.date_invoice"/></strong></p><p style="text-align:left;color:#0871d0;font-size:16px;">TOTAL: <span t-field="o.amount_total"/></p><br/></div></div></div>-->
                    <div class="page"/>
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <table class="table-border" style="float:right;width:90%;font-family: montserrat;font-size:12px;" name="invoice_line_table">
                        <thead>
                            <tr style="border-bottom:5pt solid ;border-top:5pt solid ;color:#E62450;">
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="9"/>
                                <th style="padding-top: 10px; padding-bottom:10px;" class="text-left">DESCRIPCIÓN</th>
                                <th/>
                                <th class="d-none text-left">
                                    <span>Source Document</span>
                                </th>
                                <th class="text-center">
                                    <span>CANTIDAD</span>
                                </th>
                                <th t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>PRECIO UNIDAD</span>
                                </th>
                                <th t-if="display_discount" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.(%)</span>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>IMPUESTOS</span>
                                </th>
                                <th class="text-center">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">TOTAL</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                <!--<tr style="border-bottom:1pt solid #0871d0;"
                                            t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">-->
                                <tr t-att-class="'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td style="font-weight: 500;width: 40%; line-height: 15px;font-size:13px;padding-top: 0;padding-bottom: 0;color:#E72450;" name="account_invoice_line_name">
                                            <p style="text-align:left">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </p>
                                        </td>
                                        <td/>
                                        <td class="d-none"/>
                                        <td class="text-right" style="color:#E72450;">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="color:#E72450;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="color:#E72450;">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td style="color:#E72450;" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                        </td>
                                        <td style="color:#E72450;" class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" style="padding-top: 0;padding-bottom: 0;">
                                            <p style="text-align:left; font-weight: 900; font-size:15px">
                                                <span t-field="line.name"/>
                                            </p>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/></t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" style="padding-top: 0;padding-bottom: 0;">
                                            <p style="text-align:left;">
                                                <span t-field="line.name"/>
                                            </p>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="clearfix"/>
                    <div style="text-align:right;">
                        <br/>
                        <br/>
                        <table class="table-border" style="float:right;width:50%;font-family: montserrat;">

                            <thead style="border-bottom:5pt solid #E62450;border-top:5pt solid #E62450;">
                                <t t-set="colspan" t-value="9"/>
                                <tr>
                                    <td>
                                        <strong style="color:#E62450">SUBTOTAL</strong>
                                    </td>
                                    <td>
                                        <strong>
                                            <span t-field="o.amount_untaxed"/>
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong style="color:#E62450">IMPUESTOS</strong>
                                    </td>
                                    <td>
                                        <strong>
                                            <span t-field="o.amount_tax"/>
                                        </strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong style="color:#E62450">TOTAL</strong>
                                    </td>
                                    <td>
                                        <span>
                                            <strong>
                                                <span t-field="o.amount_total"/>
                                            </strong>
                                        </span>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div>
                            <br/>
                            <span style="color:#E62450;font-weight: 600;font-size: 16px;"> Detalles bancarios </span>
                            <br/>
                            <span class="text-left" style="font-size: 14px;"> IberCaja ES59 2085 8171 5703 3024 1732 </span>
                        </div>
                    </div>

                </t>
            </t>
        </template>

        <template id="soilluns_invoice_report_document">
            <t t-name="soilluns_invoice_report_document">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                        <t t-set="print_with_payments" t-value="True"/>
                        <t t-call="reports_soilluns.soilluns_invoice_report_document_report"/>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>